/*
The condition is:  The middle element should be the average of the first and third

Mathematically:   middle = first + third / 2
â€‹
To avoid division, multiply both sides by 2:

2* (first + third) =  middle

 */



class Solution {
    public int countSubarrays(int[] nums) {
        int count = 0;
        int n = nums.length;

        for(int i=0; i<n-2; i++)
        {
            if( 2 * (nums[i] + nums[i+2]) ==  nums[i+1])
            {
                count++;
            }
        }
        return count;
    }
}
